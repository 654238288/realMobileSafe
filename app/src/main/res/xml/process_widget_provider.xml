<?xml version="1.0" encoding="utf-8"?>
<!--minWidth:在桌面显示时最小宽度-->
<!--minHeight:在桌面显示时最小高度-->
<!--updatePeriodMillis:在桌面显示时隔多久更新一次数据-->
<!--initialLayout:在桌面显示的布局样式-->
<!--resizeMode:可以被拉伸的方向，横向、纵向，横向以及纵向均可(横|纵)-->
<!--initialKeyguardLayout:可以添加到锁屏界面-->
<!--widgetCategory:可以添加到锁屏界面(Keyguard)、桌面(home_screen)、搜索框(searchbox)-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="42.0dp"
    android:minHeight="70.0dp"
    android:updatePeriodMillis="0"
    android:initialLayout="@layout/widget_desktop"
    android:resizeMode="horizontal|vertical"
    >

</appwidget-provider>