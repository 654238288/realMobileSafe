<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--清理缓存页面布局：左边为应用图标，接着是应用名称，名称下方是缓存大小，最右边是单独清理的垃圾桶-->
    <ImageView
        android:id="@+id/iv_icon"
        android:background="@drawable/ic_lancher1"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/tv_app_name"
        android:text="应用名称"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_app_cache"
        android:text="占用内存大小"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_below="@id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_clear_single_cache"
        android:background="@drawable/selector_delete_black_phone"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>