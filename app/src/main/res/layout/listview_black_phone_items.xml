<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--左边上面是拦截号码，下面是拦截类型   右边是垃圾桶的图标-->
    <TextView
        android:id="@+id/tv_black_num"
        android:text="拦截号码"
        android:textColor="#fae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_black_mode"
        android:layout_below="@id/tv_black_num"
        android:text="拦截类型"
        android:textColor="#0cf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_delete_black_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>